<?xml version="1.0"?>
<robot name="prosthetic_hand" xmlns:xacro="http://ros.org/wiki/xacro">

  <!-- Palm -->
  <link name="palm">
    <visual>
      <geometry>
        <box size="0.08 0.06 0.02"/>
      </geometry>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <material name="grey"><color rgba="0.6 0.6 0.6 1.0"/></material>
    </visual>
  </link>

  <!-- Macro for a 2-joint finger -->
  <xacro:macro name="finger" params="name x_offset">
    <link name="${name}_link1">
      <visual>
        <geometry><cylinder radius="0.007" length="0.03"/></geometry>
        <origin xyz="0 0 0.015" rpy="0 0 0"/>
        <material name="blue"><color rgba="0.2 0.2 0.8 1.0"/></material>
      </visual>
    </link>

    <joint name="${name}_joint1" type="revolute">
      <parent link="palm"/>
      <child link="${name}_link1"/>
      <origin xyz="${x_offset} 0 0.02" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
    </joint>

    <link name="${name}_link2">
      <visual>
        <geometry><cylinder radius="0.007" length="0.025"/></geometry>
        <origin xyz="0 0 0.0125" rpy="0 0 0"/>
        <material name="blue"/>
      </visual>
    </link>

    <joint name="${name}_joint2" type="revolute">
      <parent link="${name}_link1"/>
      <child link="${name}_link2"/>
      <origin xyz="0 0 0.03" rpy="0 0 0"/>
      <axis xyz="0 1 0"/>
      <limit lower="-1.57" upper="1.57" effort="1.0" velocity="1.0"/>
    </joint>
  </xacro:macro>

  <!-- Instantiate Fingers -->
  <xacro:finger name="index" x_offset="0.02"/>
  <xacro:finger name="middle" x_offset="0.00"/>
  <xacro:finger name="thumb" x_offset="-0.02"/>

</robot>
